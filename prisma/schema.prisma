model Post {
  id          String   @id @default(cuid())
  authorName  String
  title       String
  content     String
  contactInfo String?
  author_ipaddress String
  tags        Tag[]    @relation("PostTags")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Tag {
  id    Int     @id @default(autoincrement())
  name  String  @unique
  posts Post[]  @relation("PostTags")
} 